<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.joker.receita.AddReceita">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtIng1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Primeiro ingrediente" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtIng2"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edtIng1"
        android:text="Segundo ingrediente"
        android:layout_below="@+id/edtIng1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btnAddI"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtIng3"
        android:layout_below="@+id/edtIng2"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edtIng2"
        android:text="Terceiro ingrediente" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtDesc"
        android:text="Modo de preparo"
        android:layout_above="@+id/btnAddI"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edtIng3" />

</RelativeLayout>
